<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tasnim.angrybird.MainActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
////first part

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ag_vdo"/>
            </LinearLayout>
//2nd part

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ag_button" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Angry Bird Classic"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Rovio Entertainment Corporation"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="3+"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="98 MB"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".5"
                    android:src="@drawable/ic_bookmark_border_black_24dp" />

            </LinearLayout>

            //3rd part

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@color/pestal_green"
                    android:text="Install"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contain ads . In-app purchases"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="2dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/darker_gray" />

            </LinearLayout>
//4th part

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:orientation="horizontal"
               android:weightSum="4"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="70dp"
                   android:orientation="vertical"
                   android:layout_weight="1">
                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:background="@drawable/circle"
                       android:src="@drawable/ic_file_download_black_24dp"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="5dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:text="Download"
                       android:textColor="@android:color/darker_gray"
                       android:textStyle="bold"
                       android:layout_marginLeft="5dp"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="70dp"
                   android:orientation="vertical"
                   android:layout_weight="1">
                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:background="@drawable/circle"
                       android:src="@drawable/ic_people_black_24dp"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="5dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:text="5,78,730 "
                       android:textColor="@android:color/darker_gray"
                       android:textStyle="bold"
                       android:layout_marginLeft="5dp"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="70dp"
                   android:orientation="vertical"
                   android:layout_weight="1">
                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:background="@drawable/circle"
                       android:src="@drawable/ic_assignment_turned_in_black_24dp"
                       android:layout_marginTop="5dp"
                       android:layout_marginLeft="5dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:text="Arcade"
                       android:textColor="@android:color/darker_gray"
                       android:textStyle="bold"
                       android:layout_marginLeft="15dp"/>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="70dp"
                   android:layout_weight="1"
                   android:orientation="vertical">

                   <ImageView
                       android:layout_width="60dp"
                       android:layout_height="50dp"
                       android:layout_marginLeft="5dp"
                       android:layout_marginTop="5dp"
                       android:background="@drawable/circle"
                       android:src="@drawable/ic_looks_black_24dp" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="20dp"
                       android:layout_marginLeft="15dp"
                       android:text="Similar"
                       android:textColor="@android:color/darker_gray"
                       android:textStyle="bold" />
               </LinearLayout>

           </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />
//5th part

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="Use any unique powers of the angry birds to destroy the greedy pigs' defenses!"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_tablet_android_black_24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="READ MORE"
                    android:textColor="@color/pestal_green"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/darker_gray" />

//6th prt
                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag1"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag2"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag3"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag4"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag5"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag6"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag7"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag8"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag9"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ag10"/>
                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
